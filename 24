#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>
#include <errno.h>
int main() {
    int fd;
    ssize_t bytes;
    char buffer[100];
    fd = open("example.txt", O_RDWR | O_CREAT, S_IRUSR | S_IWUSR);
    if (fd == -1) {
        perror("Error opening file");
        return 1;
    }
    const char *text = "Hello, UNIX system calls!";
    bytes = write(fd, text, strlen(text));
    if (bytes == -1) {
        perror("Error writing to file");
        close(fd);
        return 1;
    }
    printf("Wrote %zd bytes to the file.\n", bytes);
    if (lseek(fd, 0, SEEK_SET) == -1) {
        perror("Error seeking in file");
        close(fd);
        return 1;
    }
    bytes = read(fd, buffer, sizeof(buffer) - 1);
    if (bytes == -1) {
        perror("Error reading from file");
        close(fd);
        return 1;
    }
    buffer[bytes] = '\0';  
    printf("Read %zd bytes from the file: %s\n", bytes, buffer);
    if (close(fd) == -1) {
        perror("Error closing file");
        return 1;
    }
    printf("File closed successfully.\n");
    return 0;
}
